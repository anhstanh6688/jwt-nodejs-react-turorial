<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=<device-width>, initial-scale=1.0">
    <title>Edit users</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <!-- mặc định sẽ có padding 2 bên  -->
    <div class="container">
        <div class="row">
            <div class="edit-user-info-container">
                <!-- đang ở trang user lên cần POST dữ liệu lên 
         khi người dùng ấn nút submit thì sẽ chuyển sang trang 
          /users/create-user
          để sử dụng được link này cần khai báo routes-->
                <form method="POST" action="/users/update-user">
                    <div class="pt-3">
                        <h3>Update a new user:</h3>
                    </div>
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input value="<%= userData.email %>" type="email" class="form-control" id="email" name="email"
                            required>

                    </div>

                    <div class="col-6"></div>
                    <div class="col-6 pb-3">
                        <label for="username" class="form-label">Username</label>
                        <input value="<%= userData.username %>" type="text" name="username" class="form-control"
                            id="username" required>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>

        </div>
    </div>

</body>

</html>